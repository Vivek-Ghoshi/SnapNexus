    </div>
    <div class="posts mb-20 ">
      <% posts.reverse().forEach(function(post){ %>

        <div class="post mt-10 w-full min-h-[50vh]">
          <div class="title px-4 flex items-center gap-2">
            <div class="w-[9vw] h-[9vw] bg-sky-100 rounded-full overflow-hidden">
              <img class="w-full h-full object-cover" src="/images/uploads/<%= post.user.profileImage %>" alt="">
            </div>
            <h4 class="text-sm">
              <%= post.user.username %>
            </h4>
            <h6 class="text-xs opacity-30">
              <%= new Date(post.date).toLocaleDateString() %>
            </h6>
          </div>
          <div class="w-full h-96 mt-4 bg-sky-100 overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.Image %>" alt="">
          </div>
          <div class="options w-full px-4 flex justify-between items-center text-[1.4rem]">
            <div class="flex gap-3 mt-2">
              <a href="/post/like/<%= post._id %>">
                <% if(post.likes.indexOf(user._id) !==-1){ %>

                  <i class="ri-heart-3-fill text-red-600"></i>
                  <% } else{ %>
                    <i class="ri-heart-3-line"></i>
                    <% } %>
              </a>
              <i id="comment-icon" class="ri-chat-3-line"></i>
              <form hidden id="comment-form" action="/post/comment/<%= post._id %>" method="post">
                <div class="w-half h-half flex gap-2 ">
                  <input class="px-2 mt-1 py-1 border-2 text-xs border-zinc-800 rounded-md block w-full bg-zinc-900"
                    type="text" name="comment" placeholder="add a comment...">
                  <input class="w-12  bg-blue-500 text-sm p-1.5 rounded-md mt-1" type="submit" value="post">
                </div>
              </form>
            </div>
            <i class="ri-bookmark-line"></i>
          </div>
          <h3 class="px-5 mt-1 text-sm leading-none tracking-tight">
            <%= post.likes.length %> like
          </h3>
          <h2 class="text-white font-light text-sm mt-2"><span class="font-semibold pl-4 pr-2">
              <%= post.caption %>
            </span> </h2>
        </div>
        <h3 class="text-sm pl-3.5 text-gray-500 font-semibold mb-2">Comments:</h3>
        <ul class="space-y-4 pl-3.5">
          <% post.comments.forEach(comment=> { %>
            <li class="flex items-start space-x-3">
              <img src="/images/uploads/<%= comment.commentedBy.profileImage %>" alt="Profile Picture"
                class="w-6 h-6 rounded-full object-cover">
              <div>
                <p class="text-sm text-gray-300">
                  <strong class="font-semibold">
                    <%= comment.commentedBy.username %>
                  </strong>
                  <span>
                    <%= comment.theComment %>
                  </span>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= new Date(comment.date).toLocaleDateString() %>
                </p>
              </div>
            </li>
            <% }) %>
        </ul>
        <%})%>

    </div>
  </div>

  <script>
    const commentIcon = document.querySelector('#comment-icon');
    const commentForm = document.querySelector('#comment-form');

    commentIcon.addEventListener('click', function () {
      commentForm.toggleAttribute('hidden');

    });
  </script>
  <%- include('partials/footer') %>